<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DaggerSeminar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_orange_dark</item>
        <item name="colorPrimaryVariant">@color/uikit_n8</item>
        <item name="colorOnPrimary">@android:color/holo_orange_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/uikit_n8</item>
        <item name="colorSecondaryVariant">@color/uikit_n8</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorAccent">@color/uikit_n8</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Base.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="splashScreenIconSize">@dimen/splash_logo_size</item>
    </style>

    <style name="Theme" parent="Theme.DaggerSeminar">
        <item name="android:windowActivityTransitions">true</item>

    </style>

    <style name="Theme.Headless">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
